
#include <iostream>

using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	int god, vis, mes, i;

	cout << "Введите год! ";
	cin >> god;
	//Проверка високосного года!
	if (god % 4 == 0)
	{
		if (god % 100 == 0) 
		{
			if (god % 400 == 0)
			{
				vis = 29;
			}
			else vis = 28;
		}
		else vis = 29;
	}
	else vis = 28;
	cout << endl;

	mes = (((31 * 11) / 12) + god + ((god - 1) / 4) - ((god - 1) / 100) + ((god - 1) / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Январь" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for ( i = 1; i < mes; i++) cout << "   ";
	for ( i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*    Находим какому дню недели равен первый день Февраля! Выводим Февраль!   *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (((31 * 12) / 12) + god + ((god - 1) / 4) - ((god - 1) / 100) + ((god - 1) / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Февраль" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= vis; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*     Находим какому дню недели равен первый день Марта! Выводим Март!       *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "        Март" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*    Находим какому дню недели равен первый день Апреля! Выводим Апрель!     *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 2 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Апрель" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 30; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*       Находим какому дню недели равен первый день Мая! Выводим Май!        *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 3 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "         Май" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*      Находим какому дню недели равен первый день Июня! Выводим Июнь!       *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 4 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "        Июнь" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 30; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*      Находим какому дню недели равен первый день Июля! Выводим Июль!       *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 5 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "        Июль" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*    Находим какому дню недели равен первый день Августа! Выводим Август!    *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 6 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Август" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*  Находим какому дню недели равен первый день Сентября! Выводим Сентябрь!   *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 7 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "      Сентябрь" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 30; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*   Находим какому дню недели равен первый день Октября! Выводим Октябрь!    *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 8 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Октябрь" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;

	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*    Находим какому дню недели равен первый день Ноября! Выводим Ноябрь!     *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 9 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Ноябрь" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 30; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl << endl << endl;
	
	/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *
	*                                                                            *
	*   Находим какому дню недели равен первый день Декабря! Выводим Декабрь!    *
	*                                                                            *
	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * */
	mes = (1 + (31 * 10 / 12) + god + (god / 4) - (god / 100) + (god / 400)) % 7;
	if (mes == 0) mes = 7;
	cout << "       Декабрь" << endl << "____________________" << endl;
	cout << "Пн Вт Ср Чт Пт Сб Вс" << endl;
	for (i = 1; i < mes; i++) cout << "   ";
	for (i = 1; i <= 31; i++)
	{
		if (i > 0 && i < 10)
		{
			cout << 0 << i << " ";
		}
		else
		{
			cout << i << " ";
		}
		if ((mes + i) % 7 == 1) cout << endl;
	}
	cout << endl;

	cin >> god;
	return 0;
}
